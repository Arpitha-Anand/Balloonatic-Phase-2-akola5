<link rel="stylesheet" href="./CSS/signup.css">
<div class="data-form">
  <form class="form-signin" action="/signup" method="POST">
    <h2 class="form-signin-heading">Create a new user:</h2>
    <label for="inputFirstName">First Name</label>
    <input type="text" pattern="[A-Za-z]{0-25}" name="first" id="inputFirstName" class="form-control" placeholder="First" autofocus required><br>
    <label for="inputLastName">Last Name</label>
    <input type="text" pattern="[A-Za-z]{0-25}" name="last" id="inputLastName" class="form-control" placeholder="Last" required><br>
    <label for="inputPassword">Password1</label>
    <input type="password" name="Password1" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" id="inputPassword" class="form-control" placeholder="Password" required><br>
    <label for="inputPassword">Password2</label>
    <input type="password" name="password2" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" id="inputPassword" class="form-control" placeholder="Password" required><br>
    <label for="inputEmail">Email address</label>
    <input type="email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" id="inputEmail" class="form-control" placeholder="Email address" required><br>
    <label for="Address">Address</label>
    <input type="text" pattern="[A-Za-z0-9]{0-30}" name="address" id="inputAddress" class="form-control" placeholder="Address"><br>
    <label for="City">City</label>
    <input type="text" pattern="[A-Za-z]{0-25}" name="city" id="inputCity" class="form-control" placeholder="City"><br>
    <label for="State">State</label>
    <input type="text" pattern="[A-Za-z]{2}" name="state" id="inputState" class="form-control" placeholder="State"><br>
    <label for="inputZipCode">Zip Code</label>
    <input type="text" name="zipCode" id="inputZipCode" pattern="[0-9]{5}" class="form-control" placeholder="Zip Code"><br>
    <label for="inputPhone">Phone</label>
    <input type="text" name="phone" id="inputPhone" pattern="[0-9]{10}" class="form-control" placeholder="Phone"><br>
    <br />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
    <button onclick=window.location.href="/">Cancel</button>
  </form>
</div>